<section class="join-main-section">
    <h1 class="join-text">
      register
      <span class="accent-text">now.</span>
    </h1>
    <form class="join-form" action="/register" method="POST">
      <div class="input-container">
        <div class="input-group ">
          <label>Display Name:</label>
          <input type="given" required name="displayName" >
        </div>
      <div class="input-group">
        <label>Username:</label>
        <input type="username" required name="username">
      </div>
      <div class="input-group">
        <label>Password:</label>
        <input type="password" required name="password">
      </div>
      <div class="input-group">
        <label>About Yourself:</label>
        <input type="text" name="description">
      </div>
      <div class="input-group">
        <label>Display Photo URL:</label>
        <input type="longtext" name="displayPhotoUrl">
      </div>
      <div class="input-group">
        <button type="submit" class="btn">Register</button>
      </div>
    </form>
  </section>
  // form validation
  <script>
    function validateForm() {
      const usernameInput = document.getElementById('username');
      const passwordInput = document.getElementById('password');
      
      if (!isValidUsername(usernameInput.value)) {
        alert('Please enter a valid username.');
        return false;
      }
      
      if (!isValidPassword(passwordInput.value)) {
        alert('Please enter a valid password.');
        return false;
      }
      
      return true;
    }
    
    function isValidUsername(username) {
      return username.length >= 4;
    }
    
    function isValidPassword(password) {
      return password.length >= 8;
    }
  </script>