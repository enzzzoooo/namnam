<head>
    <link rel="stylesheet" href="../public/css/index.css">
</head>

<section class="home-main-section">
    <div class="call-to-action">
      <h1 class="title">food at your fingertips!</h1>
      <span class="subtitle">satisfy your food cravings around Taft</span>
    </div>
    <div class="searchBar">
        <div class="container">
          <form action="/search" method="POST" class="search__form" role="search">
            <input 
              type="search"
              aria-label="Seach"
              id="searchInput"
              name="searchTerm"
              placeholder="Seach the site..."
            >
          </form>
          <div id="searchClose">Close</div>
        </div>
    </div>
</section>

<section class="restaurant-view">
    <% for (let i = 0; i < restaurants.length; i++) { %>
        <div class="restaurant-card">
          <a href="/restaurant/<%= restaurants[i]._id %>" style="color: black; text-decoration: none">
          <img src="<%= restaurants[i].picture%>" alt="<%= restaurants[i].name %>">
          <h2 class="restaurant-title"><%= restaurants[i].restaurantName %></h2>
          <p class="restaurant-description"><%= restaurants[i].description %></p>
          </a>
        </div>
    <% } %>
</section>