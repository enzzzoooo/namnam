<section class="join-main-section">
    <h1 class="join-text">
      profile
      <span class="accent-text">settings.</span>
    </h1>
    <form class="join-form" action="/profilesettings" method="Post">

        <input type="hidden" name="_method" value="PATCH">

      <div class="input-container">
        <div class="input-group ">
          <label>Display Name:</label>
          <input type="given" name="displayName" value="<%= userprofile.displayName %>">
        </div>
      <div class="input-group">
        <label>Username (cannot be modified):</label>
        <input type="username" name="username" value="<%= userprofile.username %>" readonly>
      </div>
      <div class="input-group">
        <label>Password:</label>
        <input type="password" name="password" value="<%= userprofile.password %>">
      </div>
      <div class="input-group">
        <label>About Yourself:</label>
        <input type="text" name="description" value="<%= userprofile.description %>">
      </div>
      <div class="input-group">
        <label>Display Photo URL:</label>
        <input type="text" name="displayPhotoUrl" value="<%= userprofile.displayPhotoUrl %>">
      </div>
      <div class="input-group">
        <button type="submit" class="btn">Update Profile</button>
      </div>
    </form>
  </section>